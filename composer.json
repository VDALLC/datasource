{
    "name": "vda/datasource",
    "type": "library",
    "description": "Set of interfaces and implementations for data access",
    "keywords": ["datasource", "persistence"],
    "repositories": [
        {
            "type": "composer",
            "url": "http://composer.vda-team.com/"
        }
    ],
    "require": {
        "php": ">=5.3.23",
        "vda/query": "0.11.*",
        "vda/transaction": "0.1.*",
        "vda/util": "0.11.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "monolog/monolog": "*"
    },
    "autoload": {
        "psr-4": { "Vda\\Datasource\\": "src/" }
    },
    "minimum-stability": "dev"
}
