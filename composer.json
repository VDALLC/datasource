{
    "name": "vda/datasource",
    "type": "library",
    "description": "Set of interfaces and implementations for data access",
    "keywords": ["datasource", "persistence"],
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.vda-team.com/",
            "options": {
                "ssl": {
                    "verify_peer": false
                }
            }
        }
    ],
    "require": {
        "php": ">=5.3.23",
        "vda/query": "0.16.*",
        "vda/transaction": "0.2.*",
        "vda/util": "0.12.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "monolog/monolog": "*"
    },
    "autoload": {
        "psr-4": {
            "Vda\\Datasource\\": "src/"
        }
    },
    "minimum-stability": "dev"
}
